# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
MAX_TOKENS=2000
TEMPERATURE=0.7

# Firebase Configuration (using Application Default Credentials)
FIREBASE_PROJECT_ID=your-project-id

# The following are no longer needed with ADC:
# FIREBASE_PRIVATE_KEY="..."
# FIREBASE_CLIENT_EMAIL="..."
FIRESTORE_EMULATOR_HOST=localhost:8080
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
FIREBASE_STORAGE_EMULATOR_HOST=localhost:9199

# Service Configuration
MAX_RECAP_LENGTH=500
MAX_PHOTOS_PER_RECAP=5
GENERATION_TIMEOUT=30000
LOG_LEVEL=info
NODE_ENV=development
ENABLE_DETAILED_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true
MAX_REQUESTS_PER_MINUTE=60
MAX_REQUESTS_PER_HOUR=1000
BURST_LIMIT=10
MIN_WEEKLY_ENTRIES=3
MIN_MONTHLY_ENTRIES=5
MIN_YEARLY_ENTRIES=10
MAX_CHILDREN_PER_USER=20
MAX_ENTRIES_PER_QUERY=1000
DEFAULT_TIMEZONE=America/New_York
WEEKLY_RECAP_SCHEDULE=0 9 * * 1  
MONTHLY_RECAP_SCHEDULE=0 9 1 * *  
YEARLY_RECAP_SCHEDULE=0 9 1 1 *   

# Optional Email Services (comment out if not needed)
# SENDGRID_API_KEY=your_sendgrid_api_key_here
# FROM_EMAIL=noreply@yourapp.com

# Optional Communication Services (comment out if not needed)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/123456789/abcdef

# Development Settings
ENABLE_DEBUG_MODE=false
ENABLE_MOCK_DATA=false
SKIP_AI_GENERATION=false
SKIP_FIRESTORE_QUERIES=false
CORS_ORIGIN=http://localhost:3000
API_KEY_ROTATION_INTERVAL=30d
SESSION_TIMEOUT=24h
